{
    "remoteEnv": {
        "LILA_DOMAIN": "${localEnv:CODESPACE_NAME}-8080.app.github.dev",
        "LILA_URL": "https://${localEnv:CODESPACE_NAME}-8080.app.github.dev"
    },
    "portsAttributes": {
        "8080": {
            "label": "Lichess",
            "onAutoForward": "openPreview"
        }
    },
    "otherPortsAttributes": {
        "onAutoForward": "ignore"
    },
    "onCreateCommand": "sudo apt update && sudo apt install --yes rustup && rustup default stable && cargo build --release --manifest-path command/Cargo.toml",
    "postAttachCommand": "./lila-docker start",
    "customizations": {
        "codespaces": {
            "openFiles": [
                "docs/codespaces-welcome.md"
            ]
        }
    }
}
