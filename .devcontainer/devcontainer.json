{
    "remoteEnv": {
        "LILA_DOMAIN": "${localEnv:CODESPACE_NAME}-8080.app.github.dev",
        "LILA_URL": "https://${localEnv:CODESPACE_NAME}-8080.app.github.dev"
    },
    "portsAttributes": {
        "8080": {
            "label": "Lichess",
            "onAutoForward": "openPreview"
        },
        "8025": {
            "label": "Mailpit (Outbound email debugging)",
            "onAutoForward": "silent"
        },
        "8081": {
            "label": "Mongo Express (Database explorer)",
            "onAutoForward": "silent"
        },
        "8086": {
            "label": "InfluxDB Metrics (u: admin / p: password)",
            "onAutoForward": "silent"
        },
        "8089": {
            "label": "API docs",
            "onAutoForward": "silent"
        },
        "8090": {
            "label": "Chessground",
            "onAutoForward": "silent"
        },
        "8091": {
            "label": "pgn-viewer",
            "onAutoForward": "silent"
        },
        "9666": {
            "label": "lila-engine (External engine)",
            "onAutoForward": "silent"
        },
        "6175": {
            "label": "lila-gif",
            "onAutoForward": "silent"
        },
        "3001": {
            "label": "Picfit (Image resizing)",
            "onAutoForward": "silent"
        },
        "8092": {
            "label": "Elasticvue (Elasticsearch explorer)",
            "onAutoForward": "silent"
        },
        "9200": {
            "label": "Elasticsearch",
            "onAutoForward": "silent"
        }
    },
    "otherPortsAttributes": {
        "onAutoForward": "ignore"
    },
    "onCreateCommand": "sudo apt update && sudo apt install --yes rustup && rustup default stable && cargo build --release --manifest-path command/Cargo.toml",
    "postAttachCommand": "./lila-docker start",
    "customizations": {
        "codespaces": {
            "openFiles": [
                "docs/codespaces-welcome.md"
            ]
        },
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "scala-lang.scala",
                "scalameta.metals"
            ]
        }
    }
}
